{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["ES2019"],
    "allowJs": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "scripts", "deps.d.ts", "standalone/standalone-entry.js"]
}
