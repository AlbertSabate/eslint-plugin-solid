{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "lib": ["ES2019"],
    "allowJs": true,
    "preserveSymlinks": true
  },
  "include": ["src", "configs", "test", "scripts", "standalone", "jest.setup.js"]
}
