{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "lib": ["ES2019"],
    "allowJs": true
  },
  "include": [
    "src",
    "test",
    "scripts",
    "standalone/index.js",
    "standalone/dist.d.ts",
    "jest.setup.js"
  ]
}
